.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: 700;
}

.header .subtitle {
  color: #86909C;
  margin-top: 8rpx;
  display: block;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
}

.upload-area {
  border: 1px dashed #D0D5DD;
  border-radius: 16rpx;
  padding: 48rpx 24rpx;
  text-align: center;
  color: #86909C;
}

.upload-area .preview {
  width: 100%;
  height: 420rpx;
  border-radius: 16rpx;
}

.section-title {
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chip {
  padding: 16rpx 24rpx;
  background: #F2F3F5;
  color: #4E5969;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.chip-active {
  background: #EEF0FF;
  color: #6C5CE7;
  border: 1px solid #6C5CE7;
}

.privacy-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #4E5969;
}

.start-btn {
  margin-top: 8rpx;
  background: #6C5CE7;
  color: #fff;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.start-btn.disabled {
  background: #D0D5DD;
  color: #86909C;
}
