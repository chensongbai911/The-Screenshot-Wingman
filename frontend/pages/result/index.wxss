.page {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.profile {
  text-align: center;
  padding: 48rpx 24rpx;
}

.profile-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #6C5CE7;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.bar-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.label {
  width: 120rpx;
  font-size: 26rpx;
}

.bar {
  flex: 1;
  height: 24rpx;
  background: #F2F3F5;
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #6C5CE7, #A78BFA);
}

.score {
  width: 60rpx;
  text-align: right;
  font-size: 24rpx;
  color: #86909C;
}

.reply-item {
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #F7F8FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #6C5CE7;
}

.reply-style {
  font-size: 24rpx;
  font-weight: 600;
  color: #6C5CE7;
  display: block;
  margin-bottom: 8rpx;
}

.reply-text {
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}

.reply-note {
  font-size: 24rpx;
  color: #86909C;
  display: block;
}

.list-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
  color: #4E5969;
}
