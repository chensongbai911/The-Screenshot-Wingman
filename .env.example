# 环境变量配置示例
# 复制此文件为 .env，然后填入实际的值

# ==========================================
# CloudBase 环境配置
# ==========================================

# 开发环境
CLOUDBASE_ENV_ID_DEV=ch-xxx-xxxx
CLOUDBASE_APP_ID_DEV=wx1234567890abcdef
CLOUDBASE_SECRET_KEY_DEV=your_secret_key_here

# 生产环境
CLOUDBASE_ENV_ID_PROD=ch-yyy-yyyy
CLOUDBASE_APP_ID_PROD=wx0987654321fedcba
CLOUDBASE_SECRET_KEY_PROD=your_secret_key_prod

# 当前环境（dev | prod）
NODE_ENV=dev

# ==========================================
# DeepSeek API 配置
# ==========================================

DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
DEEPSEEK_API_URL=https://api.deepseek.com

# ==========================================
# 微信小程序配置
# ==========================================

WECHAT_APP_ID=wx1234567890abcdef
WECHAT_APP_SECRET=your_wechat_app_secret

# OCR 配置（微信服务市场示例）
OCR_SERVICE_ID=
OCR_API_NAME=imgtotext

# ==========================================
# 业务配置
# ==========================================

# 点数商品定义
PRODUCT_5POINTS_PRICE=299    # 单位：分（元 * 100）
PRODUCT_20POINTS_PRICE=990

# 新手赠送点数
NEW_USER_FREE_CREDITS=1

# 分析费用
ANALYSIS_COST=1              # 扣费点数
DEEP_REPORT_COST=1           # 深度报告扣费
REFRESH_REPLIES_COST=1       # 换一批回复扣费

# ==========================================
# 日志与监控
# ==========================================

LOG_LEVEL=info               # debug | info | warn | error
LOG_OUTPUT=console,file      # 输出到控制台和文件

# Sentry 错误追踪（可选）
SENTRY_DSN=

# ==========================================
# 第三方服务
# ==========================================

# 阿里云 OSS 备份（可选）
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=

# 数据库定时备份
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * MON  # cron 表达式

# ==========================================
# 开发工具（仅开发环境）
# ==========================================

# Mock 模式（跳过真实 API 调用）
MOCK_OCR=false
MOCK_LLM=false
MOCK_PAYMENT=false

# 本地云函数端口
CLOUD_FUNCTIONS_PORT=3000

# 热更新
HOT_RELOAD=true

# ==========================================
# 安全配置
# ==========================================

# JWT 密钥
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS 配置
CORS_ORIGIN=localhost:8080,*

# 请勿在此文件中存储敏感信息
# 使用 .env.local（本地私密） 或 .env.prod（生产单独配置）
